<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>

<VBox alignment="CENTER" spacing="12" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.LoginController"
      stylesheets="@style.css" prefWidth="400" prefHeight="300">

    <Label text="BANKING SYSTEM" styleClass="title"/>
    <TextField fx:id="emailField" promptText="Email" />
    <PasswordField fx:id="passwordField" promptText="Password" />
    <Button text="Login" onAction="#handleLogin" styleClass="btn"/>
    <Label fx:id="statusLabel" />
    <Hyperlink text="Don't have an account? Register here" onAction="#goToRegister" />
</VBox>
